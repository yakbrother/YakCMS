---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} - YakCMS Admin</title>
	</head>
	<body>
		<div class="admin-layout">
			<aside class="sidebar">
				<nav>
					<ul>
						<li><a href="/admin">Dashboard</a></li>
						<li><a href="/admin/posts">Posts</a></li>
						<li><a href="/admin/media">Media</a></li>
						<li><a href="/admin/settings">Settings</a></li>
					</ul>
				</nav>
			</aside>
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	.admin-layout {
		display: grid;
		grid-template-columns: 250px 1fr;
		min-height: 100vh;
	}
	
	.sidebar {
		background: #f4f4f4;
		padding: 1rem;
	}
	
	main {
		padding: 2rem;
	}
	
	ul {
		list-style: none;
		padding: 0;
	}
	
	li {
		margin: 0.5rem 0;
	}
	
	a {
		color: #333;
		text-decoration: none;
	}
	
	a:hover {
		text-decoration: underline;
	}
</style>
